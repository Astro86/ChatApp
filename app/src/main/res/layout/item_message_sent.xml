    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="70dp"
    android:paddingEnd="8dp"
    android:clipToPadding="false">

    <TextView
