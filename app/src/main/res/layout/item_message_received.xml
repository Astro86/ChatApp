<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="70dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/friend_icon_textview"
        android:background="@drawable/friend_image_placeholder"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:textColor="@color/blueDarkPastel"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/message_received_textview"
        tools:text="A"/>

    <TextView
        android:id="@+id/message_received_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_received_bubble"
        android:layout_marginStart="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="@dimen/text_message"
        app:layout_constraintStart_toEndOf="@+id/friend_icon_textview"
        tools:text="How are you doing? This is a long message that should probably wrap."
        android:elevation="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>