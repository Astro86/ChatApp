<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorAccent">@color/colorSecondary</item>
        
        <item name="actionOverflowMenuStyle">@style/AppActionOverflowMenuStyle</item>

        <!--<item name="android:windowBackground">@color/white</item>-->
    </style>

    <style name="AppActionOverflowMenuStyle" parent="@style/Base.Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
    </style>

    <!--  Text ActionBar Menu Item -->
    <style name="TextActionBarMenuItem" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@drawable/actionbar_send_text_selector</item>
    </style>


    <!-- Login/Signup -->
    <style name="AppMaterialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <style name="AppMaterialTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox"/>


    <!-- Received/Sent Friend Request - Base Button -->
    <style name="FriendActionBaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:stateListAnimator">@animator/button_zaxis_animator</item>
    </style>


    <style name="AcceptFriendRequestButton" parent="FriendActionBaseButton">
        <item name="android:background">@drawable/button_accept_background_selector</item>
        <item name="android:textColor">@drawable/button_accept_textcolor_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/received_friend_request_accept</item>
    </style>


    <style name="RejectFriendRequestButton" parent="FriendActionBaseButton">
        <item name="android:background">@drawable/button_reject_background_selector</item>
        <item name="android:textColor">@drawable/button_reject_textcolor_selector</item>
        <item name="android:text">@string/received_friend_request_reject</item>
    </style>

    <style name="SendMessageToFriendButton" parent="FriendActionBaseButton">
        <item name="android:background">@drawable/button_reject_background_selector</item>
        <item name="android:textColor">@drawable/button_reject_textcolor_selector</item>
        <item name="android:text">@string/send_friend_message</item>
    </style>

</resources>
